        "/api/v1/books": {
            "get": {
                "tags": [
                    "Books"
                ],
                "summary": "Liste paginée des livres",
                "operationId": "ab6891af84b2f0a68a33cdfe8324ce98",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "Accept",
                        "in": "header",
                        "description": "Format de réponse attendu",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "application/json"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste paginée des livres",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "title": {
                                                        "type": "string",
                                                        "example": "1984"
                                                    },
                                                    "author": {
                                                        "type": "string",
                                                        "example": "GEORGE ORWELL"
                                                    },
                                                    "summary": {
                                                        "type": "string",
                                                        "example": "Roman dystopique décrivant une société totalitaire."
                                                    },
                                                    "isbn": {
                                                        "type": "string",
                                                        "example": "9780451524935"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "links": {
                                            "type": "object",
                                            "example": {
                                                "first": "http://localhost:8000/api/v1/books?page=1",
                                                "last": "http://localhost:8000/api/v1/books?page=5",
                                                "prev": null,
                                                "next": "http://localhost:8000/api/v1/books?page=2"
                                            }
                                        },
                                        "meta": {
                                            "type": "object",
                                            "example": {
                                                "current_page": 1,
                                                "from": 1,
                                                "last_page": 5,
                                                "per_page": 2,
                                                "to": 2,
                                                "total": 10
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
